<h1>Summaries</h1>

<div class="row">
  <div class="col-md-8">
    <% @summaries.each do |summary| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to summary.title, summary %>
          </h4>
          <small>
            submitted <%= time_ago_in_words(summary.created_at) %> ago.
          </small>
        </div>
      </div>
    <% end %>
  </div>
</div>